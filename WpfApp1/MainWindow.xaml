<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="testStyle">
            <Setter Property="Label.Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.3">
                        <GradientStop Color="#FF111EE4"/>
                        <GradientStop Color="#F7C5C8F1" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <ListView x:Name="listView1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="224,31,147,68" Loaded="listView1_Loaded">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="이미지" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                <Image Width="60" Height="60" Source="{Binding UserImage}"/>
                                    <Button Content="{Binding Name}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="이름" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="나이" DisplayMemberBinding="{Binding UserAge}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Click="Button_Click" Margin="0,0,676,403" Content="Button"/>
        <RadioButton x:Name="RadioBtn1" Content="RadioButton" HorizontalAlignment="Left" Margin="38,100,0,0" VerticalAlignment="Top"  GroupName="RadioBtnGroup1" Checked="RadioBtnClick"/>
        <RadioButton x:Name="RadioBtn2" Content="RadioButton" HorizontalAlignment="Left" Margin="38,120,0,0" VerticalAlignment="Top"  GroupName="RadioBtnGroup1" Checked="RadioBtnClick"/>
        <RadioButton x:Name="RadioBtn3" Content="RadioButton" HorizontalAlignment="Left" Margin="38,140,0,0" VerticalAlignment="Top"  GroupName="RadioBtnGroup1" Checked="RadioBtnClick"/>
        <RadioButton x:Name="RadioBtn4" Content="RadioButton" HorizontalAlignment="Left" Margin="38,160,0,0" VerticalAlignment="Top"  GroupName="RadioBtnGroup1" Checked="RadioBtnClick"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="23,49,0,0" VerticalAlignment="Top" Style="{StaticResource testStyle}"/> 
        <Label Content="Label" HorizontalAlignment="Left" Margin="23,267,0,0" VerticalAlignment="Top" Style="{StaticResource testStyle}"/>  
    </Grid>
</Window>
